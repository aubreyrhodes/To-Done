<h1>New Item</h1>

<a data-type="back">Back</a>

<form>
  
  <label>
    <span>Title</span>
    <input 
      type="text" name="title" 
      value="<%= @title %>" required
 autofocus>
    <br />
  </label>
  
  <label>
    <span>Complete</span>
    <input 
      type="checkbox" name="complete"
      <% if @complete: %>checked="checked"<% end %> />
    <br />
  </label>
  
  <button>Create</button>

</form>
